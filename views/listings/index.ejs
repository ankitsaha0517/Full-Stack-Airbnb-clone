<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <%- include("../includes/filter.ejs") %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xsm-1 ">
        <% for(let list of allListings){ %>
            <a class="a" href="/listing/<%=list._id%>">
                <div class="card mb-4" >
                    <img src="<%=list.image.url%>" class="card-img-top hover_eff" alt="list_image" style="height: 22rem;">
                    <div class="card-body mt-1">
                        <p class="card-text"><%=list.title%></p>
                        <p class="card-text">&#8377; <%=list.price.toLocaleString("en-IN")%></p>
                    </div>
                </div>    
            </a>
        <% } %>
    </div>
</body>
